@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre - @Model.Genre.NameOfGenre</li>
    <li>Release Date - @Model.DateReleased.ToShortDateString()</li>
    <li>Date Added - @Model.DateAdded.ToShortDateString()</li>
    <li>Number in Stock - @Model.Stock</li>


</ul>


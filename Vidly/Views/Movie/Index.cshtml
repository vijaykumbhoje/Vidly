@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div class="form-group">@Html.ActionLink("New Movie", "NewMovie", "Movie", null, new { @class = "btn btn-primary" }) </div>

@if (!Model.Any())
{
    <p>No Movies to rent :(</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movies</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink((string)movie.Name, "Edit", "Movie", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.NameOfGenre</td>
                </tr>

            }
        </tbody>
    </table>
}

